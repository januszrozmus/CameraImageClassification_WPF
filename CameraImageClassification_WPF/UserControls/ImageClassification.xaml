<UserControl x:Class="CameraImageClassification_WPF.UserControls.ImageClassification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CameraImageClassification_WPF.UserControls"
             mc:Ignorable="d" >
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Padding="4">
            <StackPanel>
                <ComboBox x:Name="CbClassification"/>
                <Image x:Name="ImClassification"/>
                <TextBox x:Name="tbImageName"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
